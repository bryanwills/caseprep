    "preferred_width": 400
  },
  "file_handlers": [
    {
      "action": "/upload",
      "accept": {
        "audio/*": [".mp3", ".wav", ".m4a", ".ogg", ".flac"],
        "video/*": [".mp4", ".mov", ".avi", ".webm"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+caseprep",
      "url": "/handle/%s"
    }
  ]
